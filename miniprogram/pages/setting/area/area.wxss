/* miniprogram/pages/setting/area/area.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: 'STHeiti','Microsoft YaHei',Helvetica,Arial,sans-serif;
  padding: 0;
  border: 0;
  font: inherit;
}
.showArea{
  display: flex;
  flex-direction: row;
  justify-content: start;
  background-color: white;
  margin-top: 10px;
  width: 100%;
  height: 40px;
  border-bottom: #E7E7E7 1px solid;
  padding-left: 20px;  
  align-items: center;
  align-content: center;
}
.selected{
  position: absolute;
  right: 20px;
  width: 30px;
  height: 20px;
  /* background-color: black; */
}
.selected image{
  width: 30px;
  height: 20px;
}
.title{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-content: center;
  text-align: left;
  margin-top: 10px;
  font-size: 12px;
  padding-left: 30px;
}
.hoverClass{
  background-color: #494949;
}
.complete{
  margin-top: 20px;
}