/**my.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: '宋体';
}

.userinfo {
  display: flex;
  flex-direction: row;
  justify-content: start;
  height: 100px;
}

.myavatar {
  margin-left: 20px;
}

.mynickname {
  margin-left: 20px;
}

.userinfo-avatar {
  height: 140rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 140rpx;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-content: center;
  align-items: center;
  color: #007aff;
  background-color: white;
  background-size: cover;
  text-align: left;
  margin-left: 10px;
  font-size: 35rpx;
  width: 100%;
  height: 100px;
}

.unlogin {
  margin-top: 10rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
}

.userinfo-nickname::after {
  border: none;
}

.uploader {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  box-sizing: border-box;
}

.uploader-text {
  width: 100%;
   height: 50px;
  font-size: 35rpx;
}
.go{
  position: absolute;
  right: 0;
  margin-right: 5%;
  font-weight: bolder;
  color: #787878;
}

.hover-class{
  width: 100%;
  opacity: 0.5;
  color: red;
}

.scanning{
  margin-top: 20rpx;
  align-content: flex-start;
  flex:1;
  text-align: left;
}

.ad-view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  margin-top: 10px;
  height: 150rpx;
  width: 100%;
  box-sizing: border-box;
  justify-items: flex-start;
  border-bottom: #E7E7E7 1px solid;
}

.title {
  padding-top: 30rpx;
  padding-right: 30rpx;
  margin-right: 10rpx;
  line-height: 40rpx;
  text-align: left;
  font-size: 30rpx;
}

.show-image {
  width: 120rpx;
  height: 120rpx;
  padding-right: 30rpx;
}

.agree{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  align-content: center;
  font-size: 12px;
  margin-top: 10px;
}
.radio{
  width: 100%;
}
radio{
  transform:scale(0.8);
}
.agree-text{
  margin-left: -10px;
  font-size: 0.8em;
}
.agree-text text{
  color: #459EE7;
}

.disable {
  color: #888;
}