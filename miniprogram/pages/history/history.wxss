/* miniprogram/pages/history/history.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: 'STHeiti','Microsoft YaHei',Helvetica,Arial,sans-serif;
  padding: 0;
  border: 0;
  font: inherit;
}

/* 用户信息 */
.usershowinfo {
  width: 100%;
  height: 220px;
  justify-content: center;
  align-items: center;
  /* border:1px solid black; */
  margin-bottom: 50px;
}

.userbgImg {
  height: 170px;
  width: 100%;
  background-color: #AEAFAD;
}

.userbgImg image {
  height: 170px;
  width: 100%;
}

.usercontent {
  position: absolute;
  top: 156px;
  height: 80px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  align-content: center;
  font-size: 15px;
  /* border:1px solid red; */
}

.userheader {
  width: 80px;
  height: 80px;
  margin-left: 5px;
}

.userheader image {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: white;
}

.nameaddress {
  margin-left: 10px;
  margin-top: 10px;
  font-size: 14px;
  width: 150px;
}

.nickName {
  margin-left: 5px;
  margin-bottom: 5px;
}

.attention {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 60px;
  height: 26px;
  margin-top: 5px;
  border-radius: 5%;
  text-align: center;
  align-items: center;
  align-content: center;
  color: white;
  background-image: linear-gradient(to right, rgb(4, 124, 4), rgb(91, 245, 91));
}

.desc {
  position: absolute;
  width: 100%;
  height: 10px;
  top: 242px;
}

.small {
  font-size: 12px;
  color: #6C6C6C;
  margin-left: 5px;
}


/* 发布的详细列表 */
.row_items {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: start;
  align-content: center;
  width: 100%;
  text-align: left;
}

.item {
  margin-left: 1%;
  margin-top: 15px;
  width: 48%;
  height: 261px;
  border-bottom: 1px #B1AFAE solid;
  border-radius: 5%;
  position: relative;
  border-right: 1px #B1AFAE solid;
  border-left: 1px #B1AFAE solid;
}
.image{
  width: 99.5%;
}

.image .look {
  width: 100%;
  max-height: 230px;
  min-height: 120px;
  border-right: 1px #B1AFAE solid;
  border-left: 1px #B1AFAE solid;
  /* border-bottom: 1px #B1AFAE solid; */
  background-color: black;
  border-top-left-radius: 5%;
  border-top-right-radius: 5%;
}

.delete {
  position: absolute;
  width: 28px;
  height: 30px;
  z-index: 10px;
  right: 10px;
  top: 10px;
}

.delete image {
  width: 28px;
  height: 30px;
}

.title {
  text-align: left;
  /* background-color: #B1AFAE; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.title text {
  padding: 5px;
  font-size: 15px;
}

.scaninfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  right: 5px;
  top: 200px;
  position: absolute;
  width: 40px;
  height: 20px;
  background-color: #F6F6F6;
  z-index: 1px;
  padding-left: 4px;
  padding-right: 4px;
  opacity: 0.5;
  border-radius: 5px;
}

.eye {
  width: 20px;
  height: 20px;
}

.eye image {
  width: 20px;
  height: 20px;
}

.nodata {
  margin-top: 49%;
  color: #777777;
}